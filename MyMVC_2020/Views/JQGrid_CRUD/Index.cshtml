
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<link href="~/Content/jquery.jqGrid/ui.jqgrid.css" rel="stylesheet" />
<script src="~/Scripts/jquery-2.2.0.min.js"></script>
<script src="~/Scripts/jquery-ui-1.10.0.js"></script>
<script src="~/Scripts/i18n/grid.locale-en.js"></script>
@*<script src="~/Scripts/jquery.jqGrid.min.js"></script>*@
<script src="~/Scripts/jquery.jqGrid-5.8.10.min.js"></script>

<h2>Index</h2>

<table "Demogrid" id="Demogrid"></table>
<div id="pager"></div>

<script>
    $(function () {
        debugger;
        $("#Demogrid").jqGrid
            ({
                url: "/JQGrid_CRUD/GetCustomers",
                datatype: 'json',
                mtype: 'Get',
                //table header name
                colNames: ['ID', 'Name'],
                //colModel takes the data from controller and binds to grid
                colModel: [
                    { name: "ID", editable: false, key: true },//20250611_AM1134_By_John:要帶到正確的PrimatyKey到後端Controller/Action，同時又要ReadOnly不讓User修改到PrimaryKey。
                    {
                        name: "Name", editable: true, editrules: { required: true }
                    }
                ],
                height: '100%',
                rowNum: 5,
                viewrecords: true,
                caption: 'JQgrid DEMO',
                emptyrecords: 'No records',

                pager: jQuery('#pager'),
                rowList: [5, 10, 20, 30, 40, 50],

                jsonReader:
                {
                    root: "rows",
                    page: "page",
                    total: "total",
                    records: "records",
                    repeatitems: false,
                    Id: "0"
                },
                autowidth: true,
            });
        //===============
        $("#Demogrid").navGrid('#pager',
            {
                edit: true,
                add: true,
                del: true,
                search: true,
                refresh: true,
                closeAfterSearch: true
            },

            // options for the Edit Dialog
            {
                url: "/JQGrid_CRUD/Edit_Member",
                editCaption: "The Edit Dialog",
                recreateForm: true,
                checkOnUpdate: true,
                checkOnSubmit: true,
                closeAfterEdit: true,
                afterComplete: function (response) {
                    if (response.responseJSON) {
                        if (response.responseJSON == "Update Successfully") {
                            alert("Update Successfully");
                        }
                        else {
                            alert("Update Fail");
                        }
                    }
                },
                errorTextFormat: function (data) {
                    return 'Error: ' + data.responseText
                }
            },
            // options for the Add Dialog
            {
                zIndex: 100,
                url: "/JQGrid_CRUD/Add_Member",
                closeOnEscape: true,
                recreateForm: true,
                closeAfterAdd: true,
                afterComplete: function (response) {
                    if (response.responseJSON) {
                        if (response.responseJSON == "Saved Successfully") {
                            alert("Saved Successfully");
                        }
                    }
                },
                errorTextFormat: function (data) {
                    return 'Error: ' + data.responseText
                }
            },
            // options for the Delete Dailog
            {
                url: "/JQGrid_CRUD/Delete_Member",
                closeOnEscape: true,
                closeAfterDelete: true,
                recreateForm: true,
                msg: "你確定要刪除此會員嗎?",
                afterComplete: function (response) {
                    if (response.responseText) {
                        alert(response.responseText);
                    }
                    else
                    {
                        alert('Delete失敗');
                    }
                },
                errorTextFormat: function (data) {
                    return 'Error: ' + data.responseText
                }
            }
        );
    });
</script>

